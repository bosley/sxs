[
    #(load "forge" "io")

    (io/put "=== Forge Shift Test ===\n")

    (io/put "\n--- Left Shift ---\n")
    (def x0 '(1 2 3 4 5))
    (def x1 (forge/lsh x0 1))
    (assert (eq (forge/count x1) 4) "Left shift by 1 should have 4 elements")
    (def x1_list (cast :list-p x1))
    (assert (eq (at 0 x1_list) 2) "First element should be 2")
    (assert (eq (at 1 x1_list) 3) "Second element should be 3")
    (assert (eq (at 3 x1_list) 5) "Last element should be 5")
    (io/put "Left shift (1 2 3 4 5) by 1\n")
    (def x2 (forge/lsh x0 2))
    (assert (eq (forge/count x2) 3) "Left shift by 2 should have 3 elements")
    (def x2_list (cast :list-p x2))
    (assert (eq (at 0 x2_list) 3) "First element should be 3")
    (assert (eq (at 1 x2_list) 4) "Second element should be 4")
    (assert (eq (at 2 x2_list) 5) "Third element should be 5")
    (io/put "Left shift (1 2 3 4 5) by 2\n")

    (io/put "\n--- Right Shift ---\n")
    (def y0 '(1 2 3 4 5))
    (def y1 (forge/rsh y0 1))
    (assert (eq (forge/count y1) 4) "Right shift by 1 should have 4 elements")
    (def y1_list (cast :list-p y1))
    (assert (eq (at 0 y1_list) 1) "First element should be 1")
    (assert (eq (at 1 y1_list) 2) "Second element should be 2")
    (assert (eq (at 3 y1_list) 4) "Last element should be 4")
    (io/put "Right shift (1 2 3 4 5) by 1\n")
    (def y2 (forge/rsh y0 2))
    (assert (eq (forge/count y2) 3) "Right shift by 2 should have 3 elements")
    (def y2_list (cast :list-p y2))
    (assert (eq (at 0 y2_list) 1) "First element should be 1")
    (assert (eq (at 1 y2_list) 2) "Second element should be 2")
    (assert (eq (at 2 y2_list) 3) "Third element should be 3")
    (io/put "Right shift (1 2 3 4 5) by 2\n")

    (io/put "\n--- Shift by 0 ---\n")
    (def z0 '(1 2 3))
    (def z1 (forge/lsh z0 0))
    (assert (eq (forge/count z1) 3) "Shift by 0 should not change size")
    (def z1_list (cast :list-p z1))
    (assert (eq (at 0 z1_list) 1) "First should be 1")
    (assert (eq (at 1 z1_list) 2) "Second should be 2")
    (assert (eq (at 2 z1_list) 3) "Third should be 3")
    (io/put "Left shift by 0 - no change\n")

    (io/put "\n--- Shift empty list ---\n")
    (def e0 '())
    (def e1 (forge/lsh e0 3))
    (def e2 (forge/rsh e0 3))
    (assert (eq (forge/count e1) 0) "Shift empty should stay empty")
    (assert (eq (forge/count e2) 0) "Shift empty should stay empty")
    (io/put "Left shift empty list\n")
    (io/put "Right shift empty list\n")

    (io/put "\n=== All shift tests complete ===\n")
]
