[
    #(load "forms_test" "io")

    (io/put "=== Basic Forms Test ===\n")

    (io/put "\n--- Testing make_pair ---\n")
    (def p1 (forms_test/make_pair 10 20))
    (io/put "Created pair p1\n")

    (def p1_casted (cast :pair p1))
    (io/put "Cast p1 to :pair successfully\n")

    (io/put "\n--- Testing sum_pair ---\n")
    (def sum1 (forms_test/sum_pair p1))
    (io/put "Sum of p1: %d\n" sum1)
    (assert (eq sum1 30) "sum should be 30")

    (io/put "\n--- Testing make_point ---\n")
    (def pt1 (forms_test/make_point 3.0 4.0))
    (io/put "Created point pt1 (3.0, 4.0)\n")

    (def pt2 (forms_test/make_point 0.0 0.0))
    (io/put "Created point pt2 (0.0, 0.0)\n")

    (io/put "\n--- Testing distance ---\n")
    (def dist (forms_test/distance pt1 pt2))
    (io/put "Distance from pt1 to pt2: %f\n" dist)
    (assert (eq dist 5.0) "distance should be 5.0")

    (io/put "\n--- Testing make_result ---\n")
    (def result1 (forms_test/make_result "success" 0 @nil))
    (io/put "Created result form\n")

    (def result1_casted (cast :result result1))
    (io/put "Cast result1 to :result successfully\n")

    (io/put "\n=== All basic forms tests passed ===\n")
]

