[
    #(load "forge" "io")

    (io/put "=== Forge Replace Test ===\n")

    (io/put "\n--- Replace integers ---\n")
    (def x0 '(1 2 3 2 4 2))
    (def x1 (forge/replace x0 2 99))
    (assert (eq (forge/count x1) 6) "Replaced list should still have 6 elements")
    (def x1_list (cast :list-p x1))
    (assert (eq (at 0 x1_list) 1) "First element should be 1")
    (assert (eq (at 1 x1_list) 99) "Second element should be 99")
    (assert (eq (at 2 x1_list) 3) "Third element should be 3")
    (assert (eq (at 3 x1_list) 99) "Fourth element should be 99")
    (assert (eq (at 4 x1_list) 4) "Fifth element should be 4")
    (assert (eq (at 5 x1_list) 99) "Sixth element should be 99")
    (io/put "Replaced all 2s with 99 in (1 2 3 2 4 2)\n")

    (io/put "\n--- Replace symbols ---\n")
    (def y0 '(a b c b d))
    (def y1 (forge/replace y0 b x))
    (assert (eq (forge/count y1) 5) "Replaced list should still have 5 elements")
    (def y1_list (cast :list-p y1))
    (assert (eq (at 0 y1_list) 'a) "First element should be a")
    (assert (eq (at 1 y1_list) 'x) "Second element should be x")
    (assert (eq (at 2 y1_list) 'c) "Third element should be c")
    (assert (eq (at 3 y1_list) 'x) "Fourth element should be x")
    (assert (eq (at 4 y1_list) 'd) "Fifth element should be d")
    (io/put "Replaced all b with x in (a b c b d)\n")

    (io/put "\n--- Replace non-existent ---\n")
    (def z0 '(1 2 3))
    (def z1 (forge/replace z0 99 0))
    (assert (eq (forge/count z1) 3) "Replace non-existent should not change size")
    (def z1_list (cast :list-p z1))
    (assert (eq (at 0 z1_list) 1) "First element should be 1")
    (assert (eq (at 1 z1_list) 2) "Second element should be 2")
    (assert (eq (at 2 z1_list) 3) "Third element should be 3")
    (io/put "Replaced non-existent value - no change\n")

    (io/put "\n--- Replace in empty ---\n")
    (def w0 '())
    (def w1 (forge/replace w0 1 2))
    (assert (eq (forge/count w1) 0) "Replace in empty should still be empty")
    (io/put "Replace in empty list - still empty\n")

    (io/put "\n=== All replace tests complete ===\n")
]
